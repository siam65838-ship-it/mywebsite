        // ‡¶ó‡¶≤‡ßç‡¶™ ‡¶≤‡ßã‡¶°
        function loadStories() {
            const stories = getStories();
            const container = document.getElementById('allStories');
            if (container) { 
                container.innerHTML = '';
                stories.forEach(story => {
                    const card = document.createElement('div');
                    card.className = 'story-card';
                    card.onclick = () => viewStory(story.id);
                    card.innerHTML = `<div class="story-img"></div><div class="story-content"><h3 class="story-title">${story.title}</h3><p class="story-excerpt">${story.excerpt}</p><div class="tags"><span class="tag">${story.category}</span>${story.isPremium?'<span class="tag">‚≠ê ‡¶™‡ßç‡¶∞‡¶ø‡¶Æ‡¶ø‡ßü‡¶æ‡¶Æ</span>':''}</div><div class="story-meta"><span><i class="fas fa-user"></i> ${story.author}</span><span><i class="fas fa-heart"></i> ${story.likes}</span></div></div>`;
                    container.appendChild(card);
                });
            }
            const trendingContainer = document.getElementById('trendingStories');
            if (trendingContainer) {
                trendingContainer.innerHTML = '';
                const trending = [...stories].sort((a,b)=>b.likes-a.likes).slice(0,2);
                trending.forEach(story => {
                    const card = document.createElement('div');
                    card.className = 'story-card';
                    card.onclick = () => viewStory(story.id);
                    card.innerHTML = `<div class="story-img"></div><div class="story-content"><h3 class="story-title">${story.title}</h3><p class="story-excerpt">${story.excerpt}</p><div class="tags"><span class="tag">${story.category}</span>${story.isPremium?'<span class="tag">‚≠ê ‡¶™‡ßç‡¶∞‡¶ø‡¶Æ‡¶ø‡ßü‡¶æ‡¶Æ</span>':''}</div><div class="story-meta"><span><i class="fas fa-user"></i> ${story.author}</span><span><i class="fas fa-heart"></i> ${story.likes}</span></div></div>`;
                    trendingContainer.appendChild(card);
                });
            }
        }
        
        // ‡¶ó‡¶≤‡ßç‡¶™ ‡¶¶‡ßá‡¶ñ‡ßÅ‡¶®
        function viewStory(id) {
            const stories = getStories();
            const story = stories.find(s => s.id === id);
            if (story) {
                const container = document.getElementById('storyContainer');
                container.innerHTML = `<div style="max-width: 800px; margin: 0 auto;"><h1 style="color: #667eea; margin-bottom: 10px;">${story.title}</h1><div style="display: flex; justify-content: space-between; color: #666; margin-bottom: 20px; padding-bottom: 10px; border-bottom: 1px solid #eee;"><div><i class="fas fa-user"></i> ${story.author} | <i class="fas fa-calendar"></i> ${story.date} | <i class="fas fa-eye"></i> ${story.views+1}</div><div><span class="tag">${story.category}</span></div></div><div style="font-size: 16px; line-height: 1.6; margin-bottom: 30px; padding: 15px; background: #f9f9f9; border-radius: 10px; white-space: pre-line;">${story.content}</div><div class="tags" style="margin-bottom: 15px;">${story.tags.map(tag=>`<span class="tag">#${tag}</span>`).join('')}</div><div style="display: flex; gap: 10px; margin-bottom: 20px;"><button class="btn-primary" onclick="likeStory(${story.id})"><i class="fas fa-heart"></i> ‡¶≤‡¶æ‡¶á‡¶ï (${story.likes})</button><button class="btn-secondary" onclick="shareStory(${story.id})"><i class="fas fa-share"></i> ‡¶∂‡ßá‡ßü‡¶æ‡¶∞</button></div><div style="background: white; padding: 15px; border-radius: 10px; box-shadow: 0 3px 10px rgba(0,0,0,0.1);"><h3><i class="fas fa-comments"></i> ‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü‡¶∏ (${story.comments})</h3><div class="form-group" style="margin: 15px 0;"><textarea id="commentText" class="form-control" placeholder="‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü..." rows="2"></textarea></div><button class="btn-primary" onclick="postComment(${story.id})"><i class="fas fa-paper-plane"></i> ‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶™‡ßã‡¶∏‡ßç‡¶ü</button><div id="commentsSection" style="margin-top: 15px;"><p style="text-align: center; color: #888;">‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶ï‡¶∞‡¶æ ‡¶π‡ßü‡¶®‡¶ø</p></div></div><div style="text-align: center; margin-top: 30px;"><a href="#" class="btn-primary" onclick="showPage('write')"><i class="fas fa-pen"></i> ‡¶Ü‡¶™‡¶®‡¶ø ‡¶ì ‡¶ó‡¶≤‡ßç‡¶™ ‡¶≤‡¶ø‡¶ñ‡ßÅ‡¶®</a><a href="#" class="btn-secondary" style="margin-left: 10px;" onclick="showPage('home')"><i class="fas fa-home"></i> ‡¶π‡ßã‡¶Æ</a></div></div>`;
                story.views++; stories[stories.findIndex(s=>s.id===id)] = story; saveStories(stories);
                showPage('read');
            }
        }
        
        // ‡¶≤‡¶æ‡¶á‡¶ï
        function likeStory(id) {
            const user = getCurrentUser();
            if (!user) { alert('‡¶≤‡¶æ‡¶á‡¶ï ‡¶¶‡¶ø‡¶§‡ßá ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!'); showPage('login'); return; }
            const stories = getStories();
            const storyIndex = stories.findIndex(s => s.id === id);
            if (storyIndex !== -1) { stories[storyIndex].likes++; saveStories(stories); alert('‡¶≤‡¶æ‡¶á‡¶ï ‡¶¶‡ßá‡¶ì‡ßü‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá!'); viewStory(id); }
        }
        
        // ‡¶∂‡ßá‡ßü‡¶æ‡¶∞
        function shareStory(id) {
            navigator.clipboard.writeText(window.location.href.split('#')[0] + `#read-${id}`).then(() => { alert('‡¶≤‡¶ø‡¶Ç‡¶ï ‡¶ï‡¶™‡¶ø ‡¶π‡ßü‡ßá‡¶õ‡ßá!'); });
        }
        
        // ‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü
        function postComment(storyId) {
            const user = getCurrentUser();
            if (!user) { alert('‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶ï‡¶∞‡¶§‡ßá ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!'); showPage('login'); return; }
            const commentText = document.getElementById('commentText').value;
            if (!commentText.trim()) { alert('‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶≤‡¶ø‡¶ñ‡ßÅ‡¶®!'); return; }
            const stories = getStories();
            const storyIndex = stories.findIndex(s => s.id === storyId);
            if (storyIndex !== -1) { stories[storyIndex].comments++; saveStories(stories); const commentSection = document.getElementById('commentsSection'); const commentDiv = document.createElement('div'); commentDiv.className = 'comment'; commentDiv.innerHTML = `<strong>${user.name}</strong> <small>(${new Date().toLocaleDateString('bn-BD')})</small><p>${commentText}</p>`; commentSection.insertBefore(commentDiv, commentSection.firstChild); document.getElementById('commentText').value = ''; }
        }
        
        // ‡¶´‡¶ø‡¶≤‡ßç‡¶ü‡¶æ‡¶∞
        function filterStories(category) {
            const stories = getStories().filter(story => story.category === category);
            const container = document.getElementById('allStories');
            if (container) {
                container.innerHTML = '';
                stories.forEach(story => {
                    const card = document.createElement('div');
                    card.className = 'story-card';
                    card.onclick = () => viewStory(story.id);
                    card.innerHTML = `<div class="story-img"></div><div class="story-content"><h3 class="story-title">${story.title}</h3><p class="story-excerpt">${story.excerpt}</p><div class="tags"><span class="tag">${story.category}</span></div><div class="story-meta"><span><i class="fas fa-user"></i> ${story.author}</span><span><i class="fas fa-heart"></i> ${story.likes}</span></div></div>`;
                    container.appendChild(card);
                });
            }
        }
        
        // ‡¶≤‡¶ó‡¶á‡¶®
        function login() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            const users = getUsers();
            const user = users.find(u => u.email === email && u.password === password);
            if (user) { setCurrentUser(user); updateAuthLinks(); alert('‡¶≤‡¶ó‡¶á‡¶® ‡¶∏‡¶´‡¶≤!'); showPage('home'); } else { alert('‡¶á‡¶Æ‡ßá‡¶á‡¶≤/‡¶™‡¶æ‡¶∏‡¶ì‡ßü‡¶æ‡¶∞‡ßç‡¶° ‡¶≠‡ßÅ‡¶≤!'); }
        }
        
        // ‡¶∞‡ßá‡¶ú‡¶ø‡¶∏‡ßç‡¶ü‡¶æ‡¶∞
        function register() {
            const name = document.getElementById('regName').value;
            const email = document.getElementById('regEmail').value;
            const password = document.getElementById('regPassword').value;
            const confirmPass = document.getElementById('regConfirmPass').value;
            if (!name || !email || !password) { alert('‡¶∏‡¶¨ ‡¶´‡¶ø‡¶≤‡ßç‡¶° ‡¶™‡ßÇ‡¶∞‡¶£ ‡¶ï‡¶∞‡ßÅ‡¶®!'); return; }
            if (password !== confirmPass) { alert('‡¶™‡¶æ‡¶∏‡¶ì‡ßü‡¶æ‡¶∞‡ßç‡¶° ‡¶Æ‡¶ø‡¶≤‡¶õ‡ßá ‡¶®‡¶æ!'); return; }
            const users = getUsers();
            if (users.find(u => u.email === email)) { alert('‡¶è‡¶á ‡¶á‡¶Æ‡ßá‡¶á‡¶≤ ‡¶á‡¶§‡¶ø‡¶Æ‡¶ß‡ßç‡¶Ø‡ßá ‡¶∞‡ßá‡¶ú‡¶ø‡¶∏‡ßç‡¶ü‡¶æ‡¶∞‡ßç‡¶°!'); return; }
            const newUser = {id: users.length+1, name: name, email: email, password: password, isPremium: false, audioTimeLeft: 0};
            users.push(newUser); saveUsers(users); setCurrentUser(newUser); alert('‡¶∞‡ßá‡¶ú‡¶ø‡¶∏‡ßç‡¶ü‡ßç‡¶∞‡ßá‡¶∂‡¶® ‡¶∏‡¶´‡¶≤!'); updateAuthLinks(); showPage('home');
        }
        
        // ‡¶≤‡¶ó‡¶Ü‡¶â‡¶ü
        function logout() { setCurrentUser(null); updateAuthLinks(); showPage('home'); }
        
        // ‡¶Ö‡¶• ‡¶≤‡¶ø‡¶Ç‡¶ï
        function updateAuthLinks() {
            const authLinks = document.getElementById('authLinks');
            const user = getCurrentUser();
            if (user) {
                authLinks.innerHTML = `<a href="#" onclick="showPage('profile')"><i class="fas fa-user"></i> ${user.name}</a><a href="#" onclick="logout()"><i class="fas fa-sign-out-alt"></i> ‡¶≤‡¶ó‡¶Ü‡¶â‡¶ü</a>${user.email==='admin@test.com'?`<a href="#" onclick="showPage('admin')"><i class="fas fa-crown"></i> ‡¶è‡¶°‡¶Æ‡¶ø‡¶®</a>`:''}`;
            } else {
                authLinks.innerHTML = `<a href="#" onclick="showPage('login')"><i class="fas fa-sign-in-alt"></i> ‡¶≤‡¶ó‡¶á‡¶®</a><a href="#" onclick="showPage('register')"><i class="fas fa-user-plus"></i> ‡¶∞‡ßá‡¶ú‡¶ø‡¶∏‡ßç‡¶ü‡¶æ‡¶∞</a>`;
            }
        }
        
        // ‡¶ó‡¶≤‡ßç‡¶™ ‡¶™‡¶æ‡¶¨‡¶≤‡¶ø‡¶∂
        function publishStory() {
            const user = getCurrentUser();
            if (!user) { alert('‡¶ó‡¶≤‡ßç‡¶™ ‡¶™‡ßç‡¶∞‡¶ï‡¶æ‡¶∂ ‡¶ï‡¶∞‡¶§‡ßá ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!'); showPage('login'); return; }
            const title = document.getElementById('storyTitle').value;
            const content = document.getElementById('storyContent').value;
            const category = document.getElementById('storyCategory').value;
            const tags = document.getElementById('storyTags').value;
            if (!title || !content || !category) { alert('‡¶∏‡¶¨ required ‡¶´‡¶ø‡¶≤‡ßç‡¶° ‡¶™‡ßÇ‡¶∞‡¶£ ‡¶ï‡¶∞‡ßÅ‡¶®!'); return; }
            if (content.length > 10000 && !user.isPremium) { alert('‡ßß‡ß¶,‡ß¶‡ß¶‡ß¶+ ‡¶Ö‡¶ï‡ßç‡¶∑‡¶∞‡ßá‡¶∞ ‡¶ó‡¶≤‡ßç‡¶™ ‡¶≤‡¶ø‡¶ñ‡¶§‡ßá ‡¶™‡ßç‡¶∞‡¶ø‡¶Æ‡¶ø‡ßü‡¶æ‡¶Æ ‡¶Ü‡¶™‡¶ó‡ßç‡¶∞‡ßá‡¶° ‡¶ï‡¶∞‡ßÅ‡¶®!'); showPage('payment'); return; }
            const stories = getStories();
            const newStory = {id: stories.length+1, title: title, content: content, excerpt: content.substring(0,100)+'...', author: user.name, category: category, tags: tags.split(',').map(tag=>tag.trim()).filter(tag=>tag), likes:0, comments:0, views:0, date: new Date().toLocaleDateString('bn-BD'), isAudio: false, isPremium: user.isPremium};
            stories.push(newStory); saveStories(stories); alert('‡¶ó‡¶≤‡ßç‡¶™ ‡¶∏‡¶´‡¶≤‡¶≠‡¶æ‡¶¨‡ßá ‡¶™‡ßç‡¶∞‡¶ï‡¶æ‡¶∂‡¶ø‡¶§ ‡¶π‡ßü‡ßá‡¶õ‡ßá!'); showPage('home');
        }
        
        // ‡¶ï‡ßç‡¶Ø‡¶æ‡¶∞‡ßá‡¶ï‡ßç‡¶ü‡¶æ‡¶∞ ‡¶ï‡¶æ‡¶â‡¶®‡ßç‡¶ü
        function updateCharCount() {
            const content = document.getElementById('storyContent').value;
            const count = content.length;
            document.getElementById('charCount').textContent = count;
            const user = getCurrentUser();
            if (!user || !user.isPremium) { document.getElementById('charCount').style.color = count > 10000 ? 'red' : 'green'; }
        }
        
        // ‡¶™‡ßá‡¶Æ‡ßá‡¶®‡ßç‡¶ü
        function requestPayment(packageType) {
            const user = getCurrentUser();
            if (!user) { alert('‡¶™‡ßá‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶ï‡¶∞‡¶§‡ßá ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!'); showPage('login'); return; }
            const transactionId = 'TXN' + Date.now() + Math.random().toString(36).substr(2,5).toUpperCase();
            document.getElementById('transactionId').textContent = transactionId;
            document.getElementById('paymentAmount').textContent = '‡ß´ ‡¶°‡¶≤‡¶æ‡¶∞ ($5)';
            document.getElementById('paymentPackage').textContent = packageType === 'text' ? '‡¶ü‡ßá‡¶ï‡ßç‡¶∏‡¶ü ‡¶Ü‡¶®‡¶≤‡¶ø‡¶Æ‡¶ø‡¶ü‡ßá‡¶°' : '‡¶≠‡¶Ø‡¶º‡ßá‡¶ú ‡ßß ‡¶ò‡¶®‡ßç‡¶ü‡¶æ';
            document.getElementById('paymentRequest').style.display = 'block';
        }
        
        // ‡¶™‡ßá‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶≠‡ßá‡¶∞‡¶ø‡¶´‡¶æ‡¶á
        function verifyPayment() {
            const tin = document.getElementById('tinNumber').value;
            if (!tin) { alert('‡¶ü‡¶ø‡¶Ü‡¶á‡¶® ‡¶®‡¶Æ‡ßç‡¶¨‡¶∞ ‡¶¶‡¶ø‡¶®!'); return; }
            const user = getCurrentUser();
            if (user) {
                const users = getUsers();
                const userIndex = users.findIndex(u => u.id === user.id);
                if (userIndex !== -1) {
                    users[userIndex].isPremium = true;
                    users[userIndex].audioTimeLeft += 3600;
                    saveUsers(users);
                    setCurrentUser(users[userIndex]);
                }
            }
            document.getElementById('paymentStatus').innerHTML = `<div class="success"><i class="fas fa-check-circle"></i> ‡¶™‡ßá‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶∏‡¶æ‡¶¨‡¶Æ‡¶ø‡¶ü ‡¶π‡ßü‡ßá‡¶õ‡ßá! ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶ï‡¶æ‡¶â‡¶®‡ßç‡¶ü ‡¶Ü‡¶™‡¶ó‡ßç‡¶∞‡ßá‡¶° ‡¶ï‡¶∞‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá‡•§</div>`;
            setTimeout(() => { showPage('profile'); }, 2000);
        }
        
        // ‡¶™‡ßç‡¶∞‡ßã‡¶´‡¶æ‡¶á‡¶≤
        function loadProfile() {
            const user = getCurrentUser();
            if (!user) { showPage('login'); return; }
            const stories = getStories().filter(s => s.author === user.name);
            const container = document.getElementById('profileContent');
            container.innerHTML = `<div style="display: grid; grid-template-columns: 1fr 2fr; gap: 20px;"><div><div style="background: white; padding: 15px; border-radius: 10px; box-shadow: 0 3px 10px rgba(0,0,0,0.1); text-align: center;"><div style="width: 80px; height: 80px; background: linear-gradient(45deg, #667eea, #764ba2); border-radius: 50%; margin: 0 auto 10px; display: flex; align-items: center; justify-content: center; font-size: 30px; color: white;">${user.name.charAt(0)}</div><h3>${user.name}</h3><p>${user.email}</p><div style="margin: 15px 0; padding: 10px; background: #f8f9fa; border-radius: 8px;"><h4><i class="fas fa-crown"></i> ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶ï‡¶æ‡¶â‡¶®‡ßç‡¶ü ‡¶∏‡ßç‡¶ü‡ßç‡¶Ø‡¶æ‡¶ü‡¶æ‡¶∏</h4><div style="font-size: 20px; color: ${user.isPremium?'#FFD700':'#666'}; margin: 5px 0;">${user.isPremium?'‚≠ê ‡¶™‡ßç‡¶∞‡¶ø‡¶Æ‡¶ø‡ßü‡¶æ‡¶Æ':'üÜì ‡¶´‡ßç‡¶∞‡ßÄ'}</div></div><button class="btn-primary" onclick="showPage('payment')" style="width: 100%; margin-bottom: 10px;">${user.isPremium?'üîÑ ‡¶™‡ßç‡¶∞‡¶ø‡¶Æ‡¶ø‡ßü‡¶æ‡¶Æ ‡¶∞‡¶ø‡¶®‡¶ø‡¶â':'‚≠ê ‡¶™‡ßç‡¶∞‡¶ø‡¶Æ‡¶ø‡ßü‡¶æ‡¶Æ ‡¶Ü‡¶™‡¶ó‡ßç‡¶∞‡ßá‡¶°'}</button><button class="btn-secondary" onclick="logout()" style="width: 100%;"><i class="fas fa-sign-out-alt"></i> ‡¶≤‡¶ó‡¶Ü‡¶â‡¶ü</button></div></div><div><div style="background: white; padding: 15px; border-radius: 10px; box-shadow: 0 3px 10px rgba(0,0,0,0.1); margin-bottom: 15px;"><h3><i class="fas fa-book"></i> ‡¶Ü‡¶Æ‡¶æ‡¶∞ ‡¶ó‡¶≤‡ßç‡¶™‡¶∏‡¶Æ‡ßÇ‡¶π (${stories.length})</h3>${stories.length>0?`<div style="margin-top: 10px;">${stories.slice(0,5).map(story=>`<div style="padding: 8px; border-bottom: 1px solid #eee; display: flex; justify-content: space-between;"><div><a href="#" onclick="viewStory(${story.id})" style="text-decoration: none; color: #333;"><strong>${story.title}</strong></a><div style="font-size: 12px; color: #666;">${story.date} | ‚ù§Ô∏è ${story.likes}</div></div><div><span class="tag">${story.category}</span></div></div>`).join('')}</div>`:`<p style="text-align: center; padding: 15px; color: #666;">‡¶Ü‡¶™‡¶®‡¶ø ‡¶è‡¶ñ‡¶®‡ßã ‡¶ï‡ßã‡¶®‡ßã ‡¶ó‡¶≤‡ßç‡¶™ ‡¶≤‡ßá‡¶ñ‡ßá‡¶®‡¶®‡¶ø<br><a href="#" onclick="showPage('write')" style="color: #667eea;">‡¶è‡¶ñ‡¶®‡¶á ‡¶≤‡¶ø‡¶ñ‡ßÅ‡¶®!</a></p>`}</div></div></div>`;
        }
        
        // ‡¶è‡¶°‡¶Æ‡¶ø‡¶®
        function loadAdminDashboard() {
            const user = getCurrentUser();
            if (!user || user.email !== 'admin@test.com') { showPage('home'); return; }
            const stories = getStories();
            const users = getUsers();
            const container = document.getElementById('adminDashboard');
            container.innerHTML = `<h1><i class="fas fa-tachometer-alt"></i> ‡¶è‡¶°‡¶Æ‡¶ø‡¶® ‡¶°‡ßç‡¶Ø‡¶æ‡¶∂‡¶¨‡ßã‡¶∞‡ßç‡¶°</h1><div class="admin-stats"><div class="stat-box"><span class="stat-number">${stories.length}</span><span class="stat-label">‡¶Æ‡ßã‡¶ü ‡¶ó‡¶≤‡ßç‡¶™</span></div><div class="stat-box"><span class="stat-number">${users.length}</span><span class="stat-label">‡¶Æ‡ßã‡¶ü ‡¶á‡¶â‡¶ú‡¶æ‡¶∞</span></div><div class="stat-box"><span class="stat-number">${users.filter(u=>u.isPremium).length}</span><span class="stat-label">‡¶™‡ßç‡¶∞‡¶ø‡¶Æ‡¶ø‡ßü‡¶æ‡¶Æ</span></div><div class="stat-box"><span class="stat-number">${users.filter(u=>u.isPremium).length*5} $</span><span class="stat-label">‡¶Ü‡ßü</span></div></div><div style="background: white; padding: 15px; border-radius: 10px; margin: 20px 0; box-shadow: 0 3px 10px rgba(0,0,0,0.1);"><h3><i class="fas fa-users"></i> ‡¶á‡¶â‡¶ú‡¶æ‡¶∞ ‡¶Æ‡ßç‡¶Ø‡¶æ‡¶®‡ßá‡¶ú‡¶Æ‡ßá‡¶®‡ßç‡¶ü</h3><div style="margin-top: 10px;">${users.slice(0,8).map(user=>`<div style="padding: 8px; border-bottom: 1px solid #eee; display: flex; justify-content: space-between; align-items: center;"><div><strong>${user.name}</strong><br><small>${user.email}</small></div><div>${user.isPremium?'<span class="tag" style="background: #FFD700;">‚≠ê ‡¶™‡ßç‡¶∞‡¶ø‡¶Æ‡¶ø‡ßü‡¶æ‡¶Æ</span>':'<span class="tag">üÜì ‡¶´‡ßç‡¶∞‡ßÄ</span>'}</div></div>`).join('')}</div></div><div style="text-align: center;"><button class="btn-primary" onclick="showPage('home')"><i class="fas fa-home"></i> ‡¶π‡ßã‡¶Æ</button></div>`;
        }
        
        // ‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶≤
        function scrollToSection(sectionId) { showPage('home'); setTimeout(() => { const section = document.getElementById(sectionId); if (section) section.scrollIntoView({behavior:'smooth'}); }, 100); }
        
        // ‡¶Ü‡¶∞‡ßã ‡¶ó‡¶≤‡ßç‡¶™
        function loadMoreStories() { alert('‡¶Ü‡¶∞‡ßã ‡¶ó‡¶≤‡ßç‡¶™ ‡¶≤‡ßã‡¶° ‡¶π‡¶¨‡ßá...'); }
        
        // ‡¶á‡¶®‡¶ø‡¶∂‡¶ø‡ßü‡¶æ‡¶≤‡¶æ‡¶á‡¶ú
        document.addEventListener('DOMContentLoaded', function() {
            loadDemoData();
            updateAuthLinks();
            loadStories();
            const hash = window.location.hash;
            if (hash) {
                if (hash === '#login') showPage('login');
                else if (hash === '#register') showPage('register');
                else if (hash === '#write') checkUser('write');
                else if (hash === '#payment') checkUser('payment');
                else if (hash === '#profile') checkUser('profile');
                else if (hash === '#admin') showPage('admin');
                else if (hash.startsWith('#read-')) {
                    const storyId = parseInt(hash.replace('#read-', ''));
                    if (storyId) viewStory(storyId);
                }
            }
        });
    </script>
</body>
</html>

